{% spaceless %}
<script type="text/javascript">
    var _gaq = _gaq || [];
    {% if tracking_id is not null %}
    _gaq.push(['_setAccount', '{{ tracking_id }}']);
    {% endif %}
    {% if domain_name != 'auto' %}
    _gaq.push(['_setDomainName', '{{ domain_name }}']);
    {% endif %}
    {% if allow_linker != 'false' %}
    _gaq.push(['_setAllowLinker', {{ allow_linker }}]);
    {% endif %}
    _gaq.push(['_trackPageview']);
    {% if app.environment != 'prod' %}
        {% set script = 'u/ga_debug' %}
    {% else %}
        {% set script = 'ga' %}
    {% endif %}
    (function () {
        var ga = document.createElement('script');
        ga.type = 'text/javascript';
        ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/{{ script }}.js';
        var s = document.getElementsByTagName('script')[0];
        s.parentNode.insertBefore(ga, s);
    })();
</script>
{% endspaceless %}